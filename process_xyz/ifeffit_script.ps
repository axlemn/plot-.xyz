#!/usr/bin/perl

use Ifeffit;
# Take in dir_name
$dir_name = $ARGV[0];
@index = ();

# Get names of feff data files in directory.
opendir(DIR, $dir_name) or die $!; 

# Some extra splicing
while (my $_ = readdir(DIR)) {
    # Only want files
    next unless (-f "$dir_name/$_");
    # Fitting the following regex
    if (/feff(\d{4}).dat/) {
        my $num = $1;
        push(@index, $num);
    }

    $max_index += 1;
}
closedir(DIR);

# Loading paths from file
foreach my $i (@index) {
@a[0] = ifeffit("path(" . $i . ", file = " . 
    $dir_name . 
    "/feff" . 
    sprintf("%04d", $i) .
    ".dat)");
}

$a = "";
foreach my $j (@index) {
    $a .= "$j ,";
}

print "\nff2chi(" .
    $a . 
    "group = ff)\n";

@a[2] = ifeffit("ff2chi(" .
    $a . 
    ", group = ff)");
