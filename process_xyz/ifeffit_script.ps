#@a[4] = ifeffit("show ff.k");
#@a[5] = ifeffit("plot(ff.k)");
#print "\nPlotting ff.chi...\n";
#@a[5] = ifeffit("plot(ff.chi)");
@a[6] = ifeffit("write_data(file=$dir_name/ifeffit_out, ff.k, ff.chi)");
