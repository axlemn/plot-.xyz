use Ifeffit;
# Take in dir_name
$dir_name = $ARGV[0];
print $dir_name;
# Get info for directory.

#opendir my $dir, $dir_name or die "Cannot open directory: $!";
#my @files = readdir $dir;
#closedir $dir;

$max_index = 2;
@index = (1..$max_index);

foreach my $i (@index) {
@a[0] = ifeffit("path(" . $i . ", file = " . 
    $dir_name . 
    "/feff" . 
    sprintf("%04d", $i) .
    ".dat)");
}

$a = "";
foreach my $j (@index) {
    if ($j > "1") {
        $a .= ", $j";
    } else {
        $a = "1";
    }
}
print $a;

@a[2] = ifeffit("ff2chi(" .
    $a . 
    ", group = ff)");
@a[3] = ifeffit("show ff.chi");
@a[4] = ifeffit("show ff.k");
@a[5] = ifeffit("plot(ff.k, ff.chi)");
